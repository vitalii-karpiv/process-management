{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@process-platform/domain": ["libs/domain/src"],
      "@process-platform/domain/*": ["libs/domain/src/*"],
      "@process-platform/infrastructure": ["libs/infrastructure/src"],
      "@process-platform/infrastructure/*": ["libs/infrastructure/src/*"],
      "@process-platform/messaging": ["libs/messaging/src"],
      "@process-platform/messaging/*": ["libs/messaging/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
